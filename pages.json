{
  "easycom": {
    "^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom" // 隐藏系统导航栏
      }
    },
    // 个人中心
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    },
    // 付款
    {
      "path": "pages/payment/index",
      "style": {
        "navigationBarTextStyle": "white",
        "navigationStyle": "custom"
      }
    },
    // 订单管理
    {
      "path": "pages/order/index",
      "style": {
        "navigationBarTitleText": "", //设置页面标题文字
        "navigationBarTextStyle": "white",
        "navigationBarBackgroundColor": "#232326",
        "backgroundColor": "#232326"
      }
    },
    // 切换门店
    {
      "path": "pages/store/index",
      "style": {
        "navigationBarTitleText": "切换门店", //设置页面标题文字
        "navigationBarTextStyle": "white",
        "navigationBarBackgroundColor": "#232326",
        "backgroundColor": "#232326"
      }
    },
    // 露营列表
    {
      "path": "pages/camps/list",
      "style": {
        "navigationBarTextStyle": "white",
        "navigationStyle": "custom"
      }
    },
    // 露营详情页
    {
      "path": "pages/camps/detail-partials/partial-title",
      "style": {
        "navigationBarTextStyle": "white",
        "navigationStyle": "custom"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#232326",
    "backgroundColor": "#232326"
  },
  "tabBar": {
    "custom": true,
    "color": "#5F7291",
    "selectedColor": "#0055FE",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/home.png",
        "selectedIconPath": "static/home-active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/payment/index",
        "iconPath": "static/home.png",
        "selectedIconPath": "static/home-active.png",
        "text": "付款"
      },
      {
        "pagePath": "pages/user/index",
        "iconPath": "static/user.png",
        "selectedIconPath": "static/user-active.png",
        "text": "我的"
      }
    ]
  },
  "uniIdRouter": {}
}
